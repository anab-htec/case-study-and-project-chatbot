# ==============================================================================
# 1. CORE INFRASTRUCTURE (REQUIRED)
# ==============================================================================
# Connection string for your vector database
WEAVIATE_HOST=weaviate

# OpenAI Credentials and Base url
OPENAI_API_KEY=openai_key
OPENAI_BASE_URL=openai_url

# ==============================================================================
# 2. MODEL SELECTION (REQUIRED)
# ==============================================================================
# Specify which models to use for different RAG pipeline stages
OPENAI_EMBED_MODEL=l2-text-embedding-3-small
OPENAI_CHAT_MODEL=l2-gpt-4o-mini
OPENAI_CONDENSE_MODEL=l2-gpt-4o-mini
OPENAI_PARSE_MODEL=l2-gpt-4o
OPENAI_EVAL_MODEL=l2-gpt-4o-mini
OPENAI_SYNTHETIC_DATA_MODEL=l2-gpt-4.1

# ==============================================================================
# 3. LLM HYPERPARAMETERS (REQUIRED)
# ==============================================================================

# --- Temperatures (0.0 = Deterministic, 1.0 = Creative) ---
OPENAI_CHAT_TEMPERATURE=0.2
OPENAI_PARSE_TEMPERATURE=0.0
OPENAI_CONDENSE_TEMPERATURE=0.1
OPENAI_EVAL_TEMPERATURE=0.0
OPENAI_SYNTHETIC_DATA_TEMPERATURE=0.8

# --- Top P / Nucleus Sampling ---
OPENAI_CHAT_TOP_P=1.0
OPENAI_PARSE_TOP_P=1.0
OPENAI_CONDENSE_TOP_P=1.0
OPENAI_EVAL_TOP_P=1.0
OPENAI_SYNTHETIC_DATA_TOP_P=0.9

# --- Token Limits (Safety & Cost Control) ---
OPENAI_PARSE_MAX_TOKENS=300
OPENAI_CHAT_MAX_TOKENS=800
OPENAI_CONDENSE_MAX_TOKENS=150
OPENAI_EVAL_MAX_TOKENS=1000
OPENAI_SYNTHETIC_DATA_MAX_TOKENS=8192

# ==============================================================================
# 4. RELIABILITY & RETRIES (REQUIRED)
# ==============================================================================
OPENAI_MAX_RETRIES=5
OPENAI_RETRY_INITIAL_BACKOFF_SECONDS=3
OPENAI_RETRY_BACKOFF_MULTIPLIER=2

# ==============================================================================
# 5. RAG (OPTIONAL - Overrides internal defaults)
# ==============================================================================
# CLARIFICATION_MAX_ATTEMPTS=2
# RETRIEVAL_TOP_K_CASE_STUDIES=5
# RETRIEVAL_TOP_K_PROJECTS=5
# PROJECT_TECH_WEIGHT=0.8
# PROJECT_SERVICE_WEIGHT=0.2
# PROJECT_SCORE_THRESHOLD=0.6